<% if obj.errors.any? %>
	<div class="container">
		<div class="row white-text">
			<div class="col s12 m12 l12">
				<div class="card-panel red lighten-2">
					<i class="material-icons right cls-btn">close</i>
					<span class="white-text">
						<b><%= pluralize(obj.errors.count,"error") %></b>
						prohibited your profile from being created
						<ul>
							<% obj.errors.full_messages.each do |message|%>
							<li><%= message %></li>
							<% end %>
						</ul>
					</span>
				</div>
			</div>
		</div>
	</div>
<%end%>