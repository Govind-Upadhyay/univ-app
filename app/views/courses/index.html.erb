<div class="row">
	<div class="col s12 ">
		<h3 class="center-align">Courses Listing</h3>
	</div>
</div>
<div class="row">
	<% @courses.each do |course| %>
	<div class="col s12 m6">
		<div class="card small blue-grey lighten-3">
			<div class="card-image waves-effect waves-block waves-light">
			<%=image_tag("ca.jpg", class: "activator")%>  
			</div>
			<div class="card-content">
				<span class="card-title activator gray-text text-darken-4"><%= course.short_name %><i class="material-icons right">more_vert</i></span>
				<% if logged_in? && !(current_user.courses.include?(course)) %>
				<p><%= link_to 'ENROLL', course_enroll_path(course_id: course.id), method: :post %></p>
				<% end %>
			</div>
			<div class="card-reveal blue-grey darken-3 white-text">
				<span class="card-title white-text text-darken-4"><%= course.name %>
				<i class="material-icons right">close</i></span>
				<p><%= course.description %></p>
			</div>
		</div>
	</div>
	<% end %>
</div>