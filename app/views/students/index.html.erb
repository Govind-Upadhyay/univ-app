<div class="row">
	<div class="col s12 ">
		<h3 class="center-align">Students Directory</h3>
	</div>
</div>
<div class="row">
	<% @students.each do |student| %>
	<div class="col s12 m6">
		<div class="card blue-grey darken-1">
			<div class="card-content white-text">
				<span class="card-title">Name: <%= student.name %></span>
				<span>Email: <%= student.email %></span>
				<p>Course Enrollments: None</p>
			</div>
			<div class="card-action">
				<%= link_to 'View Profile'.html_safe, student_path(student), class: "waves-effect waves-light btn" %>
				
			</div>
		</div>
	</div>
	<% end %>
</div>