<% if @student.errors.any? %>
	<div class="container">
		<div class="row white-text">
			<div class="col s12 m12 l12">
				<div class="card-panel blue lighten-2">
					<i class="material-icons right cls-btn">close</i>
					<span class="white-text">
						<b><%= pluralize(@student.errors.count,"error") %></b>
						prohibited your profile from being created
						<ul>
							<% @student.errors.full_messages.each do |message|%>
							<li><%= message %></li>
							<% end %>
						</ul>
					</span>
				</div>
			</div>
		</div>
	</div>
<%end%>


<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<h3 class="header">Edit your profile</h3>
				<div class="row">
					<%= form_for(@student, html: {class: "col s12"}) do |f| %>
						<div class="row">
							<div class="input-field col s12">
								<%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
								<%= f.label :name %>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.text_field :email, placeholder: "Enter your email address", autofocus: true %>
								<%= f.label :email %>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.submit "Edit", class: "orange accent-1 waves-effect waves-teal btn-flat right b1" %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>