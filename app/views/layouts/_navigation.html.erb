<header>
  <ul id="dropdown1" class="dropdown-content">
    <% if logged_in? %>
    <li><%= link_to 'View Profile'.html_safe, student_path(current_user) %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= session_link %></li>
  </ul>
  <ul id="dropdown2" class="dropdown-content">
    <% if logged_in? %>
    <li><%= link_to 'View Profile'.html_safe, student_path(current_user) %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= session_link %></li>
  </ul>
  <nav class="orange accent-3">
    <div class="container">
      <div class="nav-wrapper">
        <%= link_to 'Tech University', root_path, class: "brand-logo right" %>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <li><%= link_to 'Courses', root_path %></li>
          <% if(logged_in?) %>
          <li><%= link_to 'Students', students_path %></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#" data-target="dropdown1">
            <% if(logged_in?) %>
              <%= current_user.name %>
            <% else %>
             Account
            <% end %>
            <i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
        <ul class="sidenav" id="mobile-demo">
          <li><%= link_to 'Courses', root_path %></li>
          <% if(logged_in?) %>
          <li><%= link_to 'Students', students_path %></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#" data-target="dropdown2">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </div>
  </nav>
  <% flash.each do |key, message| %>
    <div class="container">
      <div class="row white-text">
        <div class="col s12 m12 l12">
          <div class="card-panel red lighten-2">
            <i class="material-icons right white-text cls-btn btn-flat">close</i>
            <span class="white-text">
              <%= message %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</header>